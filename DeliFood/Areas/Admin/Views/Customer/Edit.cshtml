@model DeliFood.Models.Customer

@{ ViewData["Title"] = "Edit"; }

<div class="page-header">
    <h2 class="header-title">CUSTOMER</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-controller="Roles" asp-action="Index" class="breadcrumb-item">List customer</a>
            <span class="breadcrumb-item active">Edit</span>
        </nav>
    </div>
</div>
<div class="card p-3">
    <h4 class="text-secondary mt-1">Edit customer infomation</h4>
    <hr />
    <form asp-area="Admin" asp-controller="Customer" asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CustomerId" />
        <div class="form-group row">
            <label for="RoleName" class="col-sm-2 col-form-label">Phone</label>
            <div class="col-sm-6">
                <input asp-for="Phone" class="form-control">
                <span asp-validation-for="Phone" class="text-danger"></span>
                @if(ViewBag.SamePhone!= null)
                {
                <span class="text-danger">@ViewBag.SamePhone</span>
                }
            </div>
        </div>
        <div class="form-group row">
            <label for="Description" class="col-sm-2 col-form-label">Full name</label>
            <div class="col-sm-6">
                <input asp-for="FullName"  class="form-control"  />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="Description" class="col-sm-2 col-form-label">Address</label>
            <div class="col-sm-6">
                <input asp-for="Address"  class="form-control"  />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3">
                <input type="submit" class="btn btn-secondary btn-tone" />|
                <a class="text-secondary" asp-area="Admin" asp-action="Index">Back to list</a>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
