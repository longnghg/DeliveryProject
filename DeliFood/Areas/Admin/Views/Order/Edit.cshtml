@model DeliFood.Models.Order
<div class="page-header">
    <h2 class="header-title">ORDER</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-controller="Order" asp-action="Index" class="breadcrumb-item">List order</a>
            <span class="breadcrumb-item active">Edit</span>
        </nav>
    </div>
</div>
<div class="card p-3">
    <h4 class="text-secondary mt-1">Confirm Order</h4>
    <hr />
    <form asp-area="Admin" asp-controller="Order" asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="OrderId" />
        <div class="form-group row">
            <label  class="col-sm-2 col-form-label">Customer</label>
            <div class="col-sm-6">
                <input asp-for="@Model.Customer.FullName" class="form-control" id="RoleNameInput" type="text" value="@Model.Customer.FullName" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="RoleName" class="col-sm-2 col-form-label">Order date</label>
            <div class="col-sm-6">
                <input asp-for="OrderDate" class="form-control" id="RoleNameInput" type="text" value="@Model.OrderDate.ToString(string.Format("dd/MM/yyyy hh:mm tt"))" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="Description" class="col-sm-2  col-form-label">Confirm processed order</label>
            <div class="col-sm-1 mt-3">
                <input asp-for="Status" type="checkbox" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-3">
                <input type="submit" class="btn btn-secondary btn-tone" />|
                <a class="text-secondary" asp-area="Admin" asp-action="Index">Back to list</a>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
